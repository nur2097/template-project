# =================================================================
# ðŸ“Š DATABASE CONFIGURATION
# =================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/enterprise_db?schema=public"

# MongoDB Configuration (for logging)
MONGODB_URI="mongodb://localhost:27017/enterprise_logs"
MONGODB_LOG_DB="mongodb://localhost:27017/enterprise_logs"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="1h"

# API Configuration
PORT="3000"
API_PREFIX="api"
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Swagger Configuration
SWAGGER_ENABLED="true"

# Logging Configuration
LOG_LEVEL="info"

# Email Configuration (if using email service)
RESEND_API_KEY=""
FROM_EMAIL="noreply@example.com"
FROM_NAME="API Service"
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
THROTTLE_TTL="60"
THROTTLE_LIMIT="100"

# File Upload
MAX_FILE_SIZE="10485760" # 10MB
UPLOAD_DEST="./uploads"

# Security
BCRYPT_ROUNDS="10"

# OpenTelemetry Configuration
OTEL_EXPORTER_JAEGER_ENDPOINT="http://localhost:14268/api/traces"
OTEL_SERVICE_NAME="nestjs-enterprise-api"
OTEL_SERVICE_VERSION="1.0.0"
TRACING_ENABLED="true"

# Cache Configuration
CACHE_TTL="300" # 5 minutes default TTL
CACHE_MAX_ITEMS="100" # Maximum cached items