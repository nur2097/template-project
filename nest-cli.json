{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "assets": [
      {
        "include": "**/*.json",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  },
  "generateOptions": {
    "spec": true
  }
}
