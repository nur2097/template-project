# =================================================================
# ðŸš€ PRODUCTION ENVIRONMENT CONFIGURATION
# =================================================================
# IMPORTANT: Copy this file to .env.production and update values

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api
FRONTEND_URL=https://yourdomain.com

# Database - PostgreSQL (Main data)
DATABASE_URL=postgresql://username:password@your-db-host:5432/production_db?schema=public&sslmode=require

# Database - MongoDB (Logs)
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/production_logs?retryWrites=true&w=majority
MONGODB_LOG_DB=mongodb+srv://username:password@your-cluster.mongodb.net/production_logs?retryWrites=true&w=majority

# Redis Cache & Queue
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Authentication (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=PRODUCTION_SECRET_MINIMUM_32_CHARS_REQUIRED_FOR_SECURITY_CHANGE_THIS
JWT_REFRESH_SECRET=PRODUCTION_REFRESH_SECRET_MINIMUM_32_CHARS_REQUIRED_FOR_SECURITY_CHANGE_THIS
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=nestjs-enterprise-api
JWT_AUDIENCE=nestjs-enterprise-client

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com

# Email Service
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your Company API
RESEND_API_KEY=your_resend_api_key_here

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Swagger Documentation (disable in production)
SWAGGER_ENABLED=false

# Logging Configuration
LOG_LEVEL=info
LOG_TO_CONSOLE=true
LOG_TO_MONGODB=true

# Security Configuration
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Health Check Configuration
HEALTH_HTTP_TIMEOUT=5000

# OpenTelemetry Configuration
TRACING_ENABLED=true
SERVICE_NAME=nestjs-enterprise-api
SERVICE_VERSION=1.0.0

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_ITEMS=100

# CSRF Protection
CSRF_ENABLED=true